<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Timeline.Controls">
    <Style Selector="controls|TimelineItem">
        <Setter Property="Background" Value="{TemplateBinding Background}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}" Padding="6" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Border.RenderTransform>
                        <TranslateTransform Y="-25" />
                    </Border.RenderTransform>
                    <Panel>
                        <ContentPresenter ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" />

                        <TextBlock Name="PART_Text" Text="{TemplateBinding Title}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center" />
                    </Panel>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>